---
import Section from "./Section.astro";
import HeaderLink from "./HeaderLink.astro";
import { Github, X, Instagram, Threads, Linkedin } from "simple-icons-astro";
import Logo from "../icons/Logo.astro";
import Home from "@/icons/Home.astro";
import News from "@/icons/News.astro";
import Briefcase from "@/icons/BriefCaseAlt.astro";
import Download from "@/icons/DownLoad2.astro";

import { SITE_TITLE } from "../consts";
---

<header class="mb-[72px]" transition:animate="slide">
  <div
    class="container mx-auto flex flex-wrap py-4 flex-col items-center md:flex-row"
  >
    <h2
      class="flex title-font font-medium items-center mb-4 text-white/65 hover:text-yellow-500 md:mb-0"
    >
      <Logo />
      <span class="text-2xl font-bold ml-2 tracking-tighter">Edinson.</span>
    </h2>

    <nav
      class="md:ml-auto md:mr-auto flex flex-wrap gap-6 items-center text-sm uppercase justify-center"
    >
      <HeaderLink href="/">Inicio</HeaderLink>
      <HeaderLink href="/blog">BlogPosts</HeaderLink>
      <HeaderLink href="/projects">Proyectos</HeaderLink>
    </nav>

    <div
      class="social-links inline-flex items-center gap-4 border-0 py-1 px-3 focus:outline-none rounded mt-4 md:mt-0"
    >
      <a
        href="https://www.linkedin.com/in/edinson-rivera-jurado/"
        target="_blank"
        class="text-white/50 hover:text-yellow-500"
        title="Visitar perfil en Linkedin"
      >
        <span class="sr-only">Follow Edinson on Linkedin</span>
        <Linkedin />
      </a>
      <a
        href="https://github.com/Edirju"
        target="_blank"
        class="text-white/50 hover:text-yellow-500"
        title="Visitar perfil de GitHub"
      >
        <span class="sr-only">Go to Edinson's GitHub repo</span>
        <Github />
      </a>
      <a
        href="/resume"
        target="_blank"
        class="text-white/65 hover:text-yellow-500"
        title="Ver Curriculum Vitae"
      >
        <span class="sr-only">Download Edinson's Resume</span>
        <Download />
      </a>
    </div>
  </div>
</header>

<style>
  header {    
    background-image: linear-gradient(
      to top left in oklch,
      oklch(42.38% 0.129764919838297 252.7742882507398) 0%,
      oklch(34.75% 0.091 258.13) 100%
    );
    box-shadow: var(--box-shadow);
  }

  @media (width <= 700px) {
    header {
      margin-bottom: 38px;
    }
  }
