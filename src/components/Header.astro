---
import Section from "./Section.astro";
import HeaderLink from "./HeaderLink.astro";
import Logo from "../icons/Logo.astro";
import Data from "@/icons/Data.astro";
import News from "@/icons/News.astro";
---

<Section>
  <header class="header" transition:animate="slide">
    <div
      class="container flex items-center justify-between py-4 md:flex-row flex-col mx-auto"
    >
      <a href="/" class="logo">
        <h2 class="flex items-center gap-1 font-bold mb-4 md:mb-0">
          <Logo />
          <span class="text-2xl font-bold"
            >edirju<span class="text-[#00D8FF]">dev</span>
          </span>
        </h2>
      </a>

      <nav
        class="navbar flex items-center gap-4 font-light text-sm uppercase tracking-tighter"
      >        
        <HeaderLink href="/blog"><News />BlogPosts</HeaderLink>
        <HeaderLink href="/projects"><Data />Proyectos</HeaderLink>
      </nav>
    </div>
  </header>
</Section>

<style>
  .header {
    font-family: var(--font-heading);
    color: rgb(var(--light), 1);
  }
  .container {
    border-bottom: 1px solid rgb(var(--light), 0.1);
  }
  .logo {
    color: rgb(var(--light), 0.9);
  }
  .logo:hover {
    text-shadow: 0 0 .5rem rgb(var(--accent-50), 0.15);
  }  
</style>
