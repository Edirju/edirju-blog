---
import Section from "@/components/Section.astro";
const today = new Date();
import {
  Github,
  X,
  Mastodon,
  Linkedin,
  Instagram,
  Threads,
  Facebook,
} from "simple-icons-astro";
import Radar from "@/icons/Radar.astro";
import { FOOTER } from "../consts";
---

<Section>
  <div class="area_section flex flex-col gap-2">
    <h2
      class="section-title flex items-center gap-2 font-bold tracking-wide text-pretty"
    >
      <Radar /> Encu√©ntrame en:
    </h2>
    <footer>
      <div class="flex flex-col items-center gap-1</div>">
        <img src="/avatar.svg" alt="" class="w-12 h-12" />
        <h3>
          {FOOTER.name}
          {FOOTER.span}
          {FOOTER.role1}
          {FOOTER.span}
          {FOOTER.role2}
        </h3>
      </div>
      <p>&copy; {today.getFullYear()} {FOOTER.alias}. {FOOTER.texto}</p>
      <div class="social-links">
        <a
          href="https://www.linkedin.com/in/edinson-rivera-jurado-65187927/"
          target="_blank"
        >
          <span class="sr-only">Ir a perfil de Linkedin</span>
          <Linkedin />
        </a>
        <a href="https://github.com/Edirju" target="_blank">
          <span class="sr-only">Go to Astro's GitHub repo</span>
          <Github />
        </a>
        <a href="https://twitter.com/edinson_rivera" target="_blank">
          <span class="sr-only">Follow Astro on Twitter</span>
          <X />
        </a>
        <a href="https://mastodon.social/@edirju" target="_blank">
          <span class="sr-only">Follow Astro on Mastodon</span>
          <Mastodon />
        </a>
        <a href="https://www.instagram.com/edirju/" target="_blank">
          <span class="sr-only">Ir a perfil de Instagram</span>
          <Instagram />
        </a>
        <a href="https://www.threads.net/@edirju" target="_blank">
          <span class="sr-only">Ir a perfil de Threads</span>
          <Threads />
        </a>
        <a href="https://www.facebook.com/edirjudev" target="_blank">
          <span class="sr-only">Ir a perfil de Facebook</span>
          <Facebook />
        </a>
      </div>
    </footer>
  </div>
</Section>

<style>
  .area_section {
    color: rgb(var(--light), 0.9);
    border-radius: 10px;
    padding: 1rem;
  }
  .section-title {
    font-size: clamp(18px, 1.5vw, 20px);
  }
  footer {
    padding: 0em 1em 0em 1em;
    text-align: center;
  }
  h3 {
    font-size: 1rem;
    font-weight: 300;
    letter-spacing: -0.025em;
    color: rgb(var(--light), 0.8);
  }
  p {
    color: rgb(var(--light), 0.4);
    font-size: 0.875rem;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--light), 0.75);
    transition-property: transform, color;
    transition-duration: 0.3s, 0.5s;
    transition-delay: 0s, 0.1s;
  }
  .social-links a:hover {
    color: rgb(var(--accent-50), 1);
    transform: scale(1.2) rotate(360deg);
  }
</style>
