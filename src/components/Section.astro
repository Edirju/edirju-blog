---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    margin: 0 auto 72px;
    max-width: 700px;
  }
  h2 {
    font-size: 1.25rem;
    font-weight: 700;
    font-style: normal;
    line-height: 1.5;
    margin-bottom: .5rem;
  }

  @media (width <= 700px){
    section {
      padding: 0 16px;
      margin-bottom: 38px;
    }
  }
</style>

